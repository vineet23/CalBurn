<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.paper.squeeze.calburn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ExerciseActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HeightActivity" tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".WeightActivity" tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CaloriesActivity" tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DietActivity" tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BMIActivity" tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>